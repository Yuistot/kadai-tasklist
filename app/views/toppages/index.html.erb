<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="InputText"></label>
            <%= f.text_area :content, class: 'form-control', id: 'InputText', placeholder: 'やること' %>
            <%= f.text_area :status, class: 'form-control', id: 'InputText', placeholder: '状況' %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the tasklist</h1>
      <%= link_to '今すぐ登録', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>